<?xml version="1.0" encoding="utf-8"?>
<Relativelayout
    android:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".activities.Login2">


    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@+id/app_logo"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--Email Input-->
        <com.google.android.material.textfield.TextInputLayout
            app:boxBackgroundColor="@android:color/transparent"
            android:background="@android:color/transparent"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/email"
            android:id="@+id/al_til_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            android:textColorHint="@color/colorPrimaries"
            app:hintTextColor="@color/colorSecondaries"
            app:boxStrokeColor="@color/colorSecondaries"
            app:hintTextAppearance="@style/TextAppearance.AppCompat">

            <!--EDIT USERNAME-->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:hint="Email Address"
                android:textColor="@color/colorPrimaries"
                android:inputType="textEmailAddress"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textCursorDrawable="@null"
                android:textSize="16sp"
                android:autofillHints="" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--Email Input-->
        <com.google.android.material.textfield.TextInputLayout
            app:boxBackgroundColor="@android:color/transparent"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            android:textColorHint="@color/colorPrimaries"
            app:hintTextColor="@color/colorSecondaries"
            app:boxStrokeColor="@color/colorSecondaries"
            app:hintTextAppearance="@style/TextAppearance.AppCompat">

            <!--EDIT USERNAME-->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:hint="Userame"
                android:textColor="@color/colorPrimaries"
                android:inputType="textEmailAddress"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textCursorDrawable="@null"
                android:textSize="16sp"
                android:autofillHints="" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--Password Input-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/al_til_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPrimaries"
            app:hintTextColor="@color/colorSecondaries"
            app:boxStrokeColor="@color/colorSecondaries"
            app:boxBackgroundColor="@android:color/transparent"
            android:background="@android:color/transparent"
            app:hintTextAppearance="@style/TextAppearance.AppCompat"
            app:passwordToggleEnabled="true">
            <!--//EDIT PASSWORD-->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/poppins"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textColor="@color/colorPrimaries"
                android:textCursorDrawable="@null"
                android:textSize="16sp"
                android:autofillHints="" />
        </com.google.android.material.textfield.TextInputLayout>

        <!--Password Input-->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPrimaries"
            app:hintTextColor="@color/colorSecondaries"
            app:boxStrokeColor="@color/colorSecondaries"
            app:boxBackgroundColor="@android:color/transparent"
            android:background="@android:color/transparent"
            app:hintTextAppearance="@style/TextAppearance.AppCompat"
            app:passwordToggleEnabled="true">
            <!--//EDIT PASSWORD-->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/poppins"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textColor="@color/colorPrimaries"
                android:textCursorDrawable="@null"
                android:textSize="16sp"
                android:autofillHints="" />
        </com.google.android.material.textfield.TextInputLayout>


        <!--App Logo-->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/al_mbtn_signin"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Register"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            app:backgroundTint="#30de8d"
            app:cornerRadius="5sp" />

        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:id="@+id/ors"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_weight="1"
                android:layout_gravity="center"
                android:background="#E4E6EB"
                android:layout_width="match_parent"
                android:layout_height="2dp">

            </View>

            <!--or-->
            <LinearLayout
                android:layout_marginHorizontal="10dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="I forgot my password"
                    android:textColor="@color/colorPrimaries"
                    android:textSize="16sp" />

            </LinearLayout>


            <View
                android:layout_weight="1"
                android:layout_gravity="center"
                android:background="#E4E6EB"
                android:layout_width="match_parent"
                android:layout_height="2dp">
            </View>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/al_mbtn_fb_signin"
            android:layout_width="match_parent"
            android:minHeight="0dp"
            android:minWidth="0dp"
            app:cornerRadius="4dp"
            android:layout_height="60dp"
            android:fontFamily="@font/poppins"
            app:icon="@drawable/facebook_icon"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:text="Facebook"
            android:textColor="#FFFFFF"
            app:backgroundTint="#4A6EA8"/>

        <com.google.android.material.button.MaterialButton
            android:layout_marginTop="10dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:layout_height="60dp"
            android:layout_width="match_parent"
            android:id="@+id/al_mbtn_google_signin"
            app:cornerRadius="4dp"
            android:fontFamily="@font/poppins"
            app:icon="@drawable/google_icon"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:text="Google"
            android:textColor="#878FAD"
            app:iconSize="20dp"
            app:iconTint="@null"
            app:backgroundTint="#FFFFFF"/>
    </LinearLayout>

</Relativelayout>