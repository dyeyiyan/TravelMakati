<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:background="#f4f6f9"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginBottom="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/rpi_iv_leisure"
            android:scaleType="fitXY"
            android:src="@drawable/default_image"
            android:layout_width="150dp"
            android:layout_height="110dp"/>
        <LinearLayout
            android:layout_marginStart="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/rpi_tv_name"
                android:includeFontPadding="false"
                android:fontFamily="@font/poppins_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Makati Park"
                android:textColor="@color/colorPrimaries"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/rpi_tv_address"
                android:fontFamily="@font/poppins_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comembo"
                android:maxLines="2"
                android:textColor="@color/colorSecondaries"
                android:textSize="10sp"/>
            <TextView
                android:id="@+id/rpi_tv_desc"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:ellipsize="marquee"
                android:maxLines="2"
                android:textColor="@color/colorPrimaries"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>

