<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/rcl_ll_message"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:fontFamily="@font/poppins_light"
            android:id="@+id/rcl_tv_time"
            android:layout_marginRight="15dp"
            android:textColor="@color/colorPrimaries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8sp"
            android:text="10:11 AM"/>

        <TextView
            android:layout_weight="1"
            android:fontFamily="@font/poppins"
            android:id="@+id/rcl_tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="His Message"
            android:padding="12.2dp"
            android:textColor="@color/colorPrimary"
            android:textSize="11sp"
            android:background="@drawable/bg_chat_right"/>


        <!--        android:text="02/03/2019 05:59PM"-->

    </LinearLayout>

    <TextView
        android:id="@+id/rcl_tv_isSeen"
        android:textColor="@color/colorPrimaries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="delivered"
        android:visibility="gone"
        android:textAlignment="textEnd"/>



</LinearLayout>